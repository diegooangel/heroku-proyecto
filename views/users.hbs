<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .color {
            background-color: rgb(204, 207, 207);
            border-radius: 20px;
            font-size: 1.5vw;
        }
        .boton{
            font-size: 1.5vw;
        }
        .email{
            font-size: 1.5vw;
        }
        .mensaje{
            font-size: 2vh;
        }
    </style>
</head>
<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <div class="col-md-2 col-sm-12">
            <h1 class="justify-center"> RESERVAS: </h1> 
        </div>
    </div>
    <div class="row justify-content-center mt-2 mb-3">
        <div class="col-md-3 col-sm-12">
            <form action="/users/new"  method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="ContraseÃ±a">
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" name="date" placeholder="Fecha">
                </div>
                <button type="submit" class="btn btn-success btn-block">Crear usuario</button>
            </form>
        </div>
        <div class="mensaje row">
            <div class="col-md-10 col-sm-12">
                <div class="col-md-10 col-sm-12">
                {{#if message}}
                    <div class="alert alert-info" role="alert">
                        {{message}}
                    </div>
                {{/if}}
            </div>
            </div>
        </div>

        
        <div class="color col-md-10 col-sm-12 mt-5 mb-5">
            <table class="table text-center">
                <thead>
                    <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Fecha</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td class="email">{{email}}</td>
                        <td>{{date}}</td>
                        <td>
                            <a href="/users/{{id_user}}" class="boton btn btn-primary">Modificar</a> <br>
                            <a href="/eliminar/{{id_user}}" class="boton btn btn-warning">Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    </div>
</div>
