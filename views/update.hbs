<style>
    h1{
        text-align: center;
        background-color:  rgb(241, 229, 229);
        border-radius: 10px;
        font-size: 3vw;
        
    }
</style>

{{#if user}}
    <div class="container-fluid mt-2">
        
        <h1>Para modificar la fecha de su reserva ingrese su password</h1>
        
        <div class="row justify-content-center mt-3">
            <div class="col-md-5 col-sm-10">
                <div class="form-group">
                <input type="email" class="form-control" value="{{user.email}}" id="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control"  id="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="date" class="form-control" value="{{user.date}}" id="date" placeholder="Fecha">
            </div>
            <button class="btn btn-primary"onclick="updateUser({{user.id_user}})">Actualizar</button>
        </div>
    </div>
{{/if}}